@model HealthManager.Models.DTO.AuthorizeRequest;
@{
    ViewData["Title"] = "Login";
}

<section class="d-flex flex-column justify-content-center align-items-center w-100 gap-1">
    <h2>Login</h2>
    <form method="post" asp-controller="Authorize" asp-action="Login" class="w-50 d-flex flex-column justify-content-center align-items-center gap-3">
        <fieldset class="d-flex flex-column gap-1 w-75">
            <div class="d-flex w-100">
                <label asp-for="email" class="flex-grow-1">Email</label>
                <span asp-validation-for="email" class="text-danger"></span>
                @if (ViewBag.AuthorizeResult != null)
            {
                <p class="justify-content-end text-danger">@ViewBag.AuthorizeResult</p>
            }
            </div>
            
            <input asp-for="email" id="email" type="email" class="form-control" />
        </fieldset>
        <fieldset class="d-flex flex-column gap-1 w-75">
            <div class="d-flex w-100">
                <label asp-for="password" class="flex-grow-1">Password</label>
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <input asp-for="password" id="password" type="password" class="form-control" />
        </fieldset>
        <fieldset class="d-flex flex-column gap-2 w-75">
            <button type="submit" class="btn btn-primary">Submit</button>
            <p class="flex-grow-1">You don't have an account? Register <a asp-controller="Authorize" asp-action="Register">here</a></p>
        </fieldset>
    </form>

</section>