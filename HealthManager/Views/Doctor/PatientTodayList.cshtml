@model System.Collections.Generic.List<HealthManager.Models.Appointment>

@{
    ViewBag.Title = "Appointments for today";
    Layout = "_DoctorDashboard";
}


    <section class="d-flex flex-column justify-content-center align-items-center w-100 h-100">
        @if (!Model.Any())
        {
           <p>There's no patients for today.</p>
        }
        else
        {
            <h2>
                Patients for @{
                    DateOnly.FromDateTime(DateTime.Now).ToString("dd/MM/yyyy");
                }
            </h2>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Hour</th>
                        <th>Patient Name</th>
                        <th>Age</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model)
                    {
                        <tr>
                            <td>@appointment.AppointmentHour</td>
                            <td>{@appointment.Patient.Name + @appointment.Patient.Surname}</td>
                            <td>{@appointment.Patient.BirthDate.Year - @DateTime.Now.Year}</td>
                            <td><a asp-controller="Doctor" asp-action="">Medical Record</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </section>

