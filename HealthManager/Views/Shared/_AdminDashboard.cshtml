<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HealthManager.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="d-flex content">
        <nav class="d-none d-lg-flex flex-column justify-content-end gap-3 mh-100 bg-danger bg-gradient  shadow-sm p-3">
            <ul class="navbar-nav p-3 fs-5 gap-1">
                <li class="nav-item item">
                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="EmployeeList">Employees</a>
                </li>
                <li><hr class="hr" /></li>
                <li class="nav-item item">
                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="CreateAdmin">Create Admin</a>
                </li>
                <li><hr class="hr" /></li>
                <li class="nav-item item">
                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="CreateDoctor">Create Doctor</a>
                </li>
                <li><hr class="hr" /></li>
                <li class="nav-item logout">
                    <a class="nav-link" asp-area="" asp-controller="Authorize" asp-action="Logout">Logout</a>
                </li>
            </ul>
        </nav>

        <div class="z-1 w-50 offcanvas offcanvas-end" id="navbarToggleExternalContent">
            <nav class="d-flex flex-column justify-content-end gap-3 rounded-end mh-100 bg-danger bg-gradient shadow p-3">
                <div class="d-flex justify-content-end d-lg-none offcanvas-header">
                    <button class="btn btn-close" type="button" data-bs-dismiss="offcanvas" data-bs-target="#navbarToggleExternalContent"></button>
                </div>
                <ul class="navbar-nav p-3 fs-5 gap-1 offcanvas-body">
                    <li class="nav-item item">
                        <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="EmployeeList">Employees</a>
                    </li>
                    <li><hr class="hr" /></li>
                    <li class="nav-item item">
                        <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="CreateAdmin">Create Admin</a>
                    </li>
                    <li><hr class="hr" /></li>
                    <li class="nav-item item">
                        <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="CreateDoctor">Create Doctor</a>
                    </li>
                    <li><hr class="hr" /></li>
                    <li class="nav-item logout">
                        <a class="nav-link" asp-area="" asp-controller="Authorize" asp-action="Logout">Logout</a>
                    </li>
                </ul>
            </nav>
        </div>

        <main role="main" class="w-100 flex-grow-1">
            <header class="header d-flex justify-content-center align-items-center navbar-light p-3">
                <p class="text-white text-start text-lg-center fw-bold fs-5 flex-grow-1 m-0">@ViewData["Title"]</p>
                <button class="navbar-toggler d-lg-none text-black text-xxl-center border-0" type="button" data-bs-toggle="offcanvas" data-bs-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </header>
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<style>

    li>a{
        padding-left: 1rem !important;
        color: black !important;
    }
    .item:hover{
        background-color: orange;
        border-radius: .25rem;
    }

    .logout>:hover {
        color: black !important;
        background-color: yellow !important;
        border-radius: 0.3rem !important;
    }

    .divider:hover{
        background-color: none !important;
    }

    .header{
        min-height: 10dvh;
        background-color: darkred;
    }
    .footer{
        height: auto;
    }
    .content{
        height: 100vh !important;

    }

    html, body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }
    main{
        height: 90dvh;
    }
    nav{
        width: 20vw !important;
    }

    @@media (max-width: 540px) {
        nav {
            width: 100% !important;
        }

        .header{
            justify-content: space-between !important;
        }

        #navbarToggleExternalContent, nav {
            height: 100dvh;
        }

        .content {
            justify-content: end !important;
        }

        nav > div > button {
            position: absolute;
            top: 1rem;
            right: 1rem;
        }

        main {
            max-width: 100vw !important
        }
    }
</style>