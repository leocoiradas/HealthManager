<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HealthManager.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="d-flex content">
        <nav class="d-flex flex-column justify-content-end gap-3 rounded-end mh-100 bg-info bg-gradient shadow p-3">
            <ul class="navbar-nav p-3 fs-5 gap-1">
                <li class="nav-item item rounded-2">
                    <a class="nav-link" asp-area="" asp-controller="Appointment" asp-action="ReserveAppointment">Reserve Appointments</a>
                </li>
                <li><hr class="hr" /></li>
                <li class="nav-item item rounded-2">
                    <a class="nav-link" asp-area="" asp-controller="PatientDashboard" asp-action="MyAppointments">My Appointments</a>
                </li>
                <li><hr class="hr" /></li>
                <li class="nav-item item rounded-2">
                    <a class="nav-link" asp-area="" asp-controller="PatientDashboard" asp-action="MedicalRegisters">Medical Registers</a>
                </li>
                <li><hr class="hr" /></li>
                <li class="nav-item logout rounded-2">
                    <a class="nav-link" asp-area="" asp-controller="Authorize" asp-action="Logout">Logout</a>
                </li>
            </ul>
        </nav>
        <main role="main" class="w-100 flex-grow-1">
            <header class="header d-flex justify-content-center align-items-center">
                <h3 class="text-center">@ViewData["Title"]</h3>
            </header>
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<style>
   
    li>a{
        padding-left: 1rem !important;
        color: black !important;
    }
    .item:hover{
        background-color: aquamarine
    }

    .logout>:hover {
        color: white !important;
        background-color: red !important;
    }
    
    .divider:hover{
        background-color: none !important;
    }

    .header{
        min-height: 10dvh;
        background-color: aqua;
    }
    .footer{
        height: auto;
    }
    .content{
        height: 100vh !important;

    }
    nav{
        width: 20vw;
    }

    html, body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }
</style>